{
    "AWSTemplateFormatVersion" : "2010-09-09",
    "Description" : "Redirects a domain to a URL.",
    "Parameters" : {
        "DomainName" : {
            "Type" : "String",
            "Default": "limpygnome.co.uk",
            "Description" : "Auxiliary domain used as mirror.",
            "AllowedPattern" : "(?!-)[a-zA-Z0-9-.]{1,63}(?<!-)",
            "ConstraintDescription" : "Must be a valid DNS zone name."
        },
        "RedirectUrl" : {
            "Type" : "String",
            "Default": "marcuscraske.com",
            "Description" : "Auxiliary domain used as mirror.",
            "AllowedPattern" : "(?!-)[a-zA-Z0-9-.]{1,63}(?<!-)",
            "ConstraintDescription" : "Must be a valid DNS zone name."
        },
        "AcmCertificateArn" : {
            "Type" : "String",
            "Default" : "arn:aws:acm:us-east-1:377402336124:certificate/9bc5bea2-49d9-456d-9c8a-ba95763312ac",
            "Description" : "The ARN / AWS resource URI for the certificate applied to CloudFront for SSL."
        }
    },
    "Mappings" : {
        "RegionMap" : {
            "eu-west-1" : { "S3hostedzoneID" : "Z1BKCTXD74EZPE", "websiteendpoint" : "s3-website-eu-west-1.amazonaws.com" }
        }
    },
    "Resources" : {

        "RedirectBucket" : {
            "Type": "AWS::S3::Bucket",
            "Properties": {
                "BucketName": { "Ref" : "DomainName" },
                "AccessControl": "PublicRead",
                "WebsiteConfiguration": {
                    "RedirectAllRequestsTo": {
                        "HostName": {"Ref": "RedirectUrl"}
                    }
                }
            }
        },

        "RedirectCF" : {
            "Type" : "AWS::CloudFront::Distribution",
            "Properties" : {
                "DistributionConfig" : {
                    "Origins" : [ {
                        "DomainName": {
                            "Fn::Join" : ["", [
                                {"Ref" : "DomainName"},
                                ".",
                                {"Fn::FindInMap" : [ "RegionMap", { "Ref" : "AWS::Region" }, "websiteendpoint"]}
                            ]]
                        },
                        "Id" : "S3Origin",
                        "CustomOriginConfig": {
                            "HTTPPort": "80",
                            "HTTPSPort": "443",
                            "OriginProtocolPolicy": "http-only"
                        }
                    }],
                    "Enabled" : "true",
                    "DefaultRootObject" : "index.html",
                    "Aliases" : [
                        { "Ref": "DomainName" }
                    ],
                    "DefaultCacheBehavior" : {
                        "AllowedMethods" : [ "GET", "HEAD" ],
                        "Compress": "true",
                        "TargetOriginId" : "S3Origin",
                        "ForwardedValues" : {
                            "QueryString" : "true"
                        },
                        "ViewerProtocolPolicy" : "redirect-to-https"
                    },
                    "ViewerCertificate": {
                        "SslSupportMethod": "sni-only",
                        "AcmCertificateArn": { "Ref" : "AcmCertificateArn" },
                        "MinimumProtocolVersion" : "TLSv1.1_2016"
                    }
                }
            }
        },

        "WWWRedirectBucket": {
            "Type": "AWS::S3::Bucket",
            "Properties": {
                "BucketName": {
                    "Fn::Join": ["", ["www", ".", {"Ref":"DomainName"}]]
                },
                "AccessControl": "PublicRead",
                "WebsiteConfiguration": {
                    "RedirectAllRequestsTo": {
                        "HostName": {"Ref": "RedirectUrl"}
                    }
                }
            }
        },

        "WWWRedirectCF" : {
            "Type" : "AWS::CloudFront::Distribution",
            "Properties" : {
                "DistributionConfig" : {
                    "Origins" : [ {
                        "DomainName": {
                            "Fn::Join" : ["", [
                                "www",
                                ".",
                                {"Ref" : "DomainName"},
                                ".",
                                {"Fn::FindInMap" : [ "RegionMap", { "Ref" : "AWS::Region" }, "websiteendpoint"]}
                            ]]
                        },
                        "Id" : "S3Origin",
                        "CustomOriginConfig": {
                            "HTTPPort": "80",
                            "HTTPSPort": "443",
                            "OriginProtocolPolicy": "http-only"
                        }
                    }],
                    "Enabled" : "true",
                    "DefaultRootObject" : "index.html",
                    "Aliases" : [
                        { "Fn::Join": ["", ["www", ".", {"Ref":"DomainName"}]] }
                    ],
                    "DefaultCacheBehavior" : {
                        "AllowedMethods" : [ "GET", "HEAD" ],
                        "Compress": "true",
                        "TargetOriginId" : "S3Origin",
                        "ForwardedValues" : {
                            "QueryString" : "true"
                        },
                        "ViewerProtocolPolicy" : "redirect-to-https"
                    },
                    "ViewerCertificate": {
                        "SslSupportMethod": "sni-only",
                        "AcmCertificateArn": { "Ref" : "AcmCertificateArn" },
                        "MinimumProtocolVersion" : "TLSv1.1_2016"
                    }
                }
            }
        },

        "WebsiteDNSName" : {
            "Type" : "AWS::Route53::RecordSetGroup",
            "Properties" : {
                "HostedZoneName" : { "Fn::Join" : [ "", [{ "Ref" : "DomainName" }, "."]]},
                "RecordSets" : [
                    {
                        "Name" : { "Ref" : "DomainName" },
                        "Type" : "A",
                        "AliasTarget" : {
                            "HostedZoneId": "Z2FDTNDATAQYW2",
                            "DNSName": {"Fn::GetAtt" : [ "RedirectCF", "DomainName"] }
                        }
                    },
                    {
                        "Name": {
                            "Fn::Join": ["", ["www", ".", {"Ref":"DomainName"}]]
                        },
                        "Type": "A",
                        "AliasTarget" : {
                            "HostedZoneId": "Z2FDTNDATAQYW2",
                            "DNSName": {"Fn::GetAtt" : [ "WWWRedirectCF", "DomainName"] }
                        }
                    }
                ]
            }
        }

    },
    "Outputs" : {
    }
}
