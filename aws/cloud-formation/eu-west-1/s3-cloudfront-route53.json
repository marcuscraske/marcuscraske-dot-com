{
    "AWSTemplateFormatVersion" : "2010-09-09",
    "Description" : "S3 bucket, with Cloud Front at the front as CDN, using Route 53 pointing to Cloud Front.",
    "Parameters" : {
        "ObjectAlias" : {
            "Type" : "String",
            "Default": "limpygnome",
            "Description" : "The root name used for buckets and other resource names.",
            "AllowedPattern" : "(?!-)[a-zA-Z0-9-.]{1,63}(?<!-)",
            "ConstraintDescription" : "Must be a valid name.."
        },
        "DomainName" : {
            "Type" : "String",
            "Default" : "marcuscraske.com",
            "Description" : "The primary domain for the website.",
            "AllowedPattern" : "(?!-)[a-zA-Z0-9-.]{1,63}(?<!-)",
            "ConstraintDescription" : "Must be a valid DNS zone name."
        },
        "AcmCertificateArn" : {
            "Type" : "String",
            "Description" : "The ARN / AWS resource URI for the certificate applied to CloudFront for SSL."
        }
    },
    "Mappings" : {
        "RegionMap" : {
            "eu-west-1" : { "S3hostedzoneID" : "Z1BKCTXD74EZPE", "websiteendpoint" : "s3-website-eu-west-1.amazonaws.com" }
        }
    },
    "Resources" : {

        "WebsiteBucket" : {
            "Type" : "AWS::S3::Bucket",
            "Properties" : {
                "BucketName": { "Ref" : "ObjectAlias" },
                "AccessControl" : "PublicRead",
                "WebsiteConfiguration" : {
                    "IndexDocument" : "index.html",
                    "ErrorDocument" : "error.html"
                }
            }
        },
        "WWWRedirectBucket": {
            "Type": "AWS::S3::Bucket",
            "Properties": {
                "BucketName": {
                    "Fn::Join": ["", ["www", ".", {"Ref":"DomainName"}]]
                },
                "AccessControl": "PublicRead",
                "WebsiteConfiguration": {
                    "RedirectAllRequestsTo": {
                        "HostName": {"Ref": "DomainName"}
                    }
                }
            }
        },
        "FilesBucket" : {
            "Type" : "AWS::S3::Bucket",
            "Properties" : {
                "BucketName": {
                    "Fn::Join": ["", ["public", "-", {"Ref":"ObjectAlias"}]]
                },
                "AccessControl" : "PublicRead",
                "WebsiteConfiguration" : {
                    "IndexDocument" : "index.html",
                    "ErrorDocument" : "error.html"
                },
                "CorsConfiguration" : {
                    "CorsRules": [
                        {
                            "AllowedHeaders": [
                                "*"
                            ],
                            "AllowedMethods": [
                                "GET"
                            ],
                            "AllowedOrigins": [
                                "*"
                            ],
                            "ExposedHeaders": [
                                "Date"
                            ],
                            "Id": "corsWildcardRule",
                            "MaxAge": "3600"
                        }
                    ]
                }
            }
        },
        "WebsiteCDN" : {
            "Type" : "AWS::CloudFront::Distribution",
            "Properties" : {
                "DistributionConfig" : {
                    "Comment" : "Cloudfront Distribution pointing to S3 bucket",
                    "Origins" : [ {
                        "DomainName": {
                            "Fn::Join" : ["", [
                                {"Ref" : "ObjectAlias"},
                                ".",
                                {"Fn::FindInMap" : [ "RegionMap", { "Ref" : "AWS::Region" }, "websiteendpoint"]}
                            ]]
                        },
                        "Id" : "S3Origin",
                        "CustomOriginConfig": {
                            "HTTPPort": "80",
                            "HTTPSPort": "443",
                            "OriginProtocolPolicy": "http-only"
                        }
                    }],
                    "Enabled" : "true",
                    "DefaultRootObject" : "index.html",
                    "Aliases" : [
                        { "Ref": "DomainName" }
                    ],
                    "DefaultCacheBehavior" : {
                        "AllowedMethods" : [ "GET", "HEAD" ],
                        "Compress": "true",
                        "TargetOriginId" : "S3Origin",
                        "ForwardedValues" : {
                            "QueryString" : "true"
                        },
                        "ViewerProtocolPolicy" : "redirect-to-https"
                    },
                    "ViewerCertificate": {
                        "SslSupportMethod": "sni-only",
                        "AcmCertificateArn": { "Ref" : "AcmCertificateArn" },
                        "MinimumProtocolVersion" : "TLSv1.1_2016"
                    }
                }
            }
        },
        "FilesCDN" : {
            "Type" : "AWS::CloudFront::Distribution",
            "Properties" : {
                "DistributionConfig" : {
                    "Comment" : "Cloudfront Distribution pointing to S3 bucket",
                    "Origins" : [ {
                        "DomainName": {
                            "Fn::Join" : ["", [
                                "public",
                                "-",
                                {"Ref" : "ObjectAlias"},
                                ".",
                                {"Fn::FindInMap" : [ "RegionMap", { "Ref" : "AWS::Region" }, "websiteendpoint"]}
                            ]]
                        },
                        "Id" : "S3Origin",
                        "CustomOriginConfig": {
                            "HTTPPort": "80",
                            "HTTPSPort": "443",
                            "OriginProtocolPolicy": "http-only"
                        }
                    }],
                    "Enabled" : "true",
                    "DefaultRootObject" : "index.html",
                    "Aliases" : [
                        { "Fn::Join" : [".", ["public", { "Ref": "DomainName" }]] }
                    ],
                    "DefaultCacheBehavior" : {
                        "AllowedMethods" : [ "GET", "HEAD" ],
                        "Compress": "true",
                        "TargetOriginId" : "S3Origin",
                        "ForwardedValues" : {
                            "QueryString" : "true"
                        },
                        "ViewerProtocolPolicy" : "redirect-to-https"
                    },
                    "ViewerCertificate": {
                        "SslSupportMethod": "sni-only",
                        "AcmCertificateArn": { "Ref" : "AcmCertificateArn" },
                        "MinimumProtocolVersion" : "TLSv1.1_2016"
                    }
                }
            }
        },
        "WWWRedirectCF" : {
            "Type" : "AWS::CloudFront::Distribution",
            "Properties" : {
                "DistributionConfig" : {
                    "Comment" : "Cloudfront Distribution pointing to S3 bucket",
                    "Origins" : [ {
                        "DomainName": {
                            "Fn::Join" : ["", [
                                "www",
                                ".",
                                {"Ref" : "DomainName"},
                                ".",
                                {"Fn::FindInMap" : [ "RegionMap", { "Ref" : "AWS::Region" }, "websiteendpoint"]}
                            ]]
                        },
                        "Id" : "S3Origin",
                        "CustomOriginConfig": {
                            "HTTPPort": "80",
                            "HTTPSPort": "443",
                            "OriginProtocolPolicy": "http-only"
                        }
                    }],
                    "Enabled" : "true",
                    "DefaultRootObject" : "index.html",
                    "Aliases" : [
                        { "Fn::Join": ["", ["www", ".", {"Ref":"DomainName"}]] }
                    ],
                    "DefaultCacheBehavior" : {
                        "AllowedMethods" : [ "GET", "HEAD" ],
                        "Compress": "true",
                        "TargetOriginId" : "S3Origin",
                        "ForwardedValues" : {
                            "QueryString" : "true"
                        },
                        "ViewerProtocolPolicy" : "redirect-to-https"
                    },
                    "ViewerCertificate": {
                        "SslSupportMethod": "sni-only",
                        "AcmCertificateArn": { "Ref" : "AcmCertificateArn" },
                        "MinimumProtocolVersion" : "TLSv1.1_2016"
                    }
                }
            }
        },

        "WebsiteDNSName" : {
            "Type" : "AWS::Route53::RecordSetGroup",
            "Properties" : {
                "HostedZoneName" : { "Fn::Join" : [ "", [{ "Ref" : "DomainName" }, "."]]},
                "RecordSets" : [

                    {
                        "Name" : { "Ref" : "DomainName" },
                        "Type" : "A",
                        "AliasTarget" : {
                            "HostedZoneId": "Z2FDTNDATAQYW2",
                            "DNSName": {"Fn::GetAtt" : [ "WebsiteCDN", "DomainName"] }
                        }
                    },
                    {
                        "Name": {
                            "Fn::Join": ["", ["public", ".", {"Ref":"DomainName"}]]
                        },
                        "Type": "A",
                        "AliasTarget" : {
                            "HostedZoneId": "Z2FDTNDATAQYW2",
                            "DNSName": {"Fn::GetAtt" : [ "FilesCDN", "DomainName"] }
                        }
                    },
                    {
                        "Name": {
                            "Fn::Join": ["", ["www", ".", {"Ref":"DomainName"}]]
                        },
                        "Type" : "A",
                        "AliasTarget" : {
                            "HostedZoneId": "Z2FDTNDATAQYW2",
                            "DNSName": {"Fn::GetAtt" : [ "WWWRedirectCF", "DomainName"] }
                        }
                    },
                    {
                        "Name": {
                            "Fn::Join": ["", ["cerberus", ".", {"Ref":"DomainName"}]]
                        },
                        "Type": "A",
                        "TTL" : "900",
                        "ResourceRecords" : [
                            "178.62.63.16"
                        ]
                    }

                ]
            }
        }

    },
    "Outputs" : {
        "BucketName" : {
            "Value" : { "Ref" : "WebsiteBucket" },
            "Description" : "Website bucket"
        },

        "FilesBucketName" : {
            "Value" : { "Ref" : "FilesBucket" },
            "Description" : "Public files bucket"
        },

        "DistributionId" : {
            "Value" : { "Ref" : "WebsiteCDN" },
            "Description" : "The DistributionId of the CloudFront CDN instance"
        },

        "FilesDistributionId" : {
            "Value" : { "Ref" : "FilesCDN" },
            "Description" : "The DistributionId of the CloudFront CDN instance"
        }
    }
}
